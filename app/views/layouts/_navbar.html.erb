<nav class="navbar">
    <% if user_signed_in? %>
      <li class="<%= 'active' if current_page?(user_path(current_user)) %> nav-item">
        <%= link_to current_user.name, user_path(current_user), class: "nav-link" %>
      </li>
      <li class="<%= 'active' if current_page?(posts_path) %> nav-item">
        <%= link_to 'Posts', posts_path, class: "nav-link" %>
      </li>
      <li class="<%= 'active' if current_page?(users_path) %> nav-item">
        <%= link_to 'Users', users_path, class: "nav-link" %>
      </li>
      <% unless current_user.notifications.empty? %>
        <li class="<%= 'active' if current_page?(user_notifications_path(current_user)) %> nav-item">
          <%= link_to 'Notifications', user_notifications_path(current_user), class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item align-right">
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo_method: "delete" }, class: "nav-link" %>
      </li>
      <li class="<%= 'active' if current_page?(edit_user_registration_path) %> nav-item align-right">
        <%= link_to 'Edit Profile', edit_user_registration_path, class: "nav-link" %>
      </li>
    <% else %>
      <li class="<%= 'active' if current_page?(user_session_path) %> nav-item align-right">
        <%= link_to 'Log In', user_session_path, class: "nav-link" %>
      </li>
      <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_url, data: { turbo: "false" } %>
    <% end %>
</nav>
