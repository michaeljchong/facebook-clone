<div id="<%= dom_id comment %>">
  <p>
    <strong>Body:</strong>
    <%= comment.body %>
  </p>

  <p>
    <strong>User:</strong>
    <%= User.find(comment.user_id).name %>
  </p>

  <%= button_to "Like this comment", comment_likes_path(comment), params: {like: {likeable_type: "Comment", likeable_id: comment.id}} %>
  <%= link_to "Edit this comment", edit_comment_path(comment) %>
  <%= button_to "Destroy this comment", comment, method: :delete %>
</div>
